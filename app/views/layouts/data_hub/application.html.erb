<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? yield(:title) : "Data Hub" %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Data Hub" %>">
  <%= stylesheet_link_tag    "data_hub/application", media: "all" %>
  <%= javascript_include_tag "data_hub/application" %>
  <%= csrf_meta_tags %>
	<%= yield(:head) %>
</head>
<body class="<%= controller_name %> <%= action_name %>">

<nav class="navbar navbar-default">
  <div class="container">
    <div class="navbar-header">
      <%= link_to "Data Hub", '/data_hub', :class => 'navbar-brand' %>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <%= render 'layouts/data_hub/navigation' %>
    </div>
  </div>
</nav>

<%#= notice -%>
<%#= alert -%>
<div class="container">
  <%= render 'layouts/data_hub/messages' %>
<%= yield %>
</div>

</body>
</html>

